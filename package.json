{
  "name": "css-the-important-parts",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henrikmathiesen/css-the-important-parts.git"
  },
  "scripts": {
    "start": "npm run css:dev && concurrently \"npm run css:watch\" \"npm run serve\"",
    "css:dev":"npm run sass:dev && npm run css:autoprefixer:dev",
    "css:watch": "onchange \"src/**/*.scss\" -- npm run css:dev",
    "sass:dev": "node-sass --source-map-embed --source-map-contents src/ -o src/",
    "css:autoprefixer:dev": "postcss -u autoprefixer --autoprefixer.browsers \"last 3 versions\" -r src/**/*.css",
    "serve": "http-server ./src -p 1337"
  },
  "devDependencies": {
    "autoprefixer": "7.1.2",
    "concurrently": "3.5.0",
    "http-server": "0.10.0",
    "node-sass": "4.5.3",
    "onchange": "3.2.1",
    "postcss-cli": "4.1.0"
  }
}
